<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/starting_gradient"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro_title"
            android:text="Sveiki prisijungę!"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:textSize="30dp"
            android:textColor="#fff"
            />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="400dp"
            android:id="@+id/intro_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"

            android:src="@drawable/ic_appicon"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro_description"
            android:text="Prisiūk antraštę - tai aplikacija, kuri taip jūsų geriausiu draugu skaitant naujienas"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textSize="19dp"
            android:layout_marginBottom="80dp"
            android:textColor="#fff"

            />

    </RelativeLayout>

</RelativeLayout>
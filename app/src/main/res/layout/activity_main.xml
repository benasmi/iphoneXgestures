<?xml version="1.0" encoding="utf-8"?>
<io.codetail.widget.RevealFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context="com.mabe.productions.iphonexgestures.MainActivity">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.SwitchCompat
            android:text=""
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="2"
            android:scaleY="2"
            android:id="@+id/center_switch"
            android:theme="@style/SCBSwitch"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="45dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:layout_above="@+id/center_switch"
            android:layout_marginBottom="50dp"
            android:id="@+id/info_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_switch"
            android:layout_toStartOf="@+id/center_switch"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="90dp"
            android:id="@+id/button" />

        <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button"
            android:layout_toEndOf="@+id/center_switch"
            android:layout_marginStart="19dp"
            android:id="@+id/button2" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:id="@+id/imageView2" />

    </RelativeLayout>


</io.codetail.widget.RevealFrameLayout>
